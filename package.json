{
  "name": "next-js-boilerplate",
  "version": "0.1.0",
  "private": true,
  "author": "Anwar Hossain",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0",
    "npm": "please-use-yarn"
  },
  "scripts": {
    "dev": "next dev",
    "devt": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "analyze": "ANALYZE=true next build",
    "eslint": "next lint --fix --dir src",
    "prettier": "prettier --write .",
    "lint": "yarn eslint && yarn prettier",
    "format": "next lint --fix && prettier '**/*.{json,yaml}' --write --ignore-path .gitignore",
    "postbuild": "prisma generate && next-sitemap",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,md,ts,tsx,html,css,scss}": "yarn prettier",
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix --cache-location ./node_modules/.cache/.eslintcache"
  },
  "dependencies": {
    "@clerk/nextjs": "^4.22.1",
    "@hookform/resolvers": "^3.1.1",
    "@next/bundle-analyzer": "^13.4.13",
    "@prisma/client": "^5.0.0",
    "@radix-ui/react-avatar": "^1.0.3",
    "@radix-ui/react-dialog": "^1.0.4",
    "@radix-ui/react-dropdown-menu": "^2.0.5",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-select": "^1.2.2",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "axios": "^1.4.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "config": "^3.3.9",
    "crisp-sdk-web": "^1.0.19",
    "lucide-react": "^0.263.1",
    "ms": "^2.1.3",
    "next": "^13.4.13",
    "next-themes": "^0.2.1",
    "openai": "^3.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.45.2",
    "react-hot-toast": "^2.4.1",
    "react-markdown": "^8.0.7",
    "replicate": "^0.12.3",
    "stripe": "^12.13.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.3.3",
    "tailwindcss-animate": "^1.0.6",
    "typewriter-effect": "^2.20.1",
    "winston": "^3.10.0",
    "zod": "^3.21.4",
    "zustand": "^4.3.9"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@next/eslint-plugin-next": "^13.4.13",
    "@types/ms": "^0.7.31",
    "@types/node": "^20.4.2",
    "@types/react": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "eslint": "^8.45.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "postcss": "^8.4.24",
    "prettier": "^3.0.0",
    "prisma": "^5.0.0",
    "typescript": "^5.1.6"
  }
}
